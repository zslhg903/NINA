<UserControl
    x:Class="NINA.View.About.AboutSDKsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NINA.View.About"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core"
    xmlns:vm="clr-namespace:NINA.ViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <vm:AboutSDKsVM x:Key="AboutSDKsVM" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Margin="5,0,0,0" FontSize="14">
            To interface with astronomy hardware the hardware vendors provide SDKs (Software Development Kits) that N.I.N.A. will utilize.<LineBreak />
            Which SDKs and their respective versions are used is explained below.</TextBlock>
        <Grid
            Grid.Row="1"
            Margin="20,20,0,0"
            DataContext="{StaticResource AboutSDKsVM}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock FontWeight="Bold" Text="{ns:Loc LblVendor}" />
            <TextBlock
                Grid.Column="1"
                FontWeight="Bold"
                Text="{ns:Loc LblVersion}" />

            <TextBlock
                Grid.Row="1"
                Margin="0,5,0,0"
                Text="Altair Astro" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,5,0,0"
                Text="{Binding AltairSDKVersion}" />

            <TextBlock Grid.Row="2" Text="Atik" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding AtikSDKVersion}" />

            <TextBlock Grid.Row="3" Text="Canon" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding CanonSDKVersion}" />

            <TextBlock Grid.Row="4" Text="Nikon" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="1"
                Text="{Binding NikonSDKVersion}" />

            <TextBlock Grid.Row="5" Text="FLI" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="1"
                Text="{Binding FLISDKVersion}" />

            <TextBlock Grid.Row="6" Text="Omegon" />
            <TextBlock
                Grid.Row="6"
                Grid.Column="1"
                Text="{Binding OmegonSDKVersion}" />

            <TextBlock Grid.Row="7" Text="QHYCCD" />
            <TextBlock
                Grid.Row="7"
                Grid.Column="1"
                Text="{Binding QHYSDKVersion}" />

            <TextBlock Grid.Row="8" Text="RisingCam" />
            <TextBlock
                Grid.Row="8"
                Grid.Column="1"
                Text="{Binding RisingCamSDKVersion}" />

            <TextBlock Grid.Row="9" Text="ToupTek" />
            <TextBlock
                Grid.Row="9"
                Grid.Column="1"
                Text="{Binding ToupTekSDKVersion}" />

            <TextBlock Grid.Row="10" Text="ZWOptical" />
            <TextBlock
                Grid.Row="10"
                Grid.Column="1"
                Text="{Binding ZWOSDKVersion}" />
        </Grid>
    </Grid>
</UserControl>