<UserControl
    x:Class="NINA.View.Equipment.TelescopeLatLongSyncView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NINA.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core"
    xmlns:util="clr-namespace:NINA.Core.Utility;assembly=NINA.Core"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock Margin="5" Text="{ns:Loc LblSyncLatLongText}" FontSize="16" />

        <GroupBox Grid.Row="1" Header="{ns:Loc LblTelescope}">
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{ns:Loc LblLatitude}" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TelescopeLatitude, Converter={StaticResource DegreesToDMSConverter}}" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Margin="5,0,0,0" Text="{Binding TelescopeLatitude, StringFormat=({0:0.000 째})}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{ns:Loc LblLongitude}" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TelescopeLongitude, Converter={StaticResource DegreesToDMSConverter}}" />
                    <TextBlock Grid.Row="1" Grid.Column="2" Margin="5,0,0,0" Text="{Binding TelescopeLongitude, StringFormat=({0:0.000 째})}" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{ns:Loc LblElevation}" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TelescopeElevation, StringFormat={}{0:0.0 m}}" />
                </Grid>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="{ns:Loc LblNINA}">
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{ns:Loc LblLatitude}" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding NINALatitude, Converter={StaticResource DegreesToDMSConverter}}" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Margin="5,0,0,0" Text="{Binding NINALatitude, StringFormat=({0:0.000 째})}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{ns:Loc LblLongitude}" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding NINALongitude, Converter={StaticResource DegreesToDMSConverter}}" />
                    <TextBlock Grid.Row="1" Grid.Column="2" Margin="5,0,0,0" Text="{Binding NINALongitude, StringFormat=({0:0.000 째})}" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{ns:Loc LblElevation}" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding NINAElevation, StringFormat={}{0:0.0 m}}" />
                </Grid>
            </StackPanel>
        </GroupBox>

        <UniformGrid
            Grid.Row="3"
            Margin="5"
            Columns="3">
            <Button
                Margin="5"
                util:ButtonHelper.DialogResult="True"
                Command="{Binding SyncTelescopeCommand}">
                <TextBlock
                    Margin="5"
                    Foreground="{StaticResource ButtonForegroundBrush}"
                    Text="{ns:Loc LblNINAToTelescope}" />
            </Button>
            <Button
                Margin="5"
                util:ButtonHelper.DialogResult="True"
                Command="{Binding SyncNINACommand}">
                <TextBlock
                    Margin="5"
                    Foreground="{StaticResource ButtonForegroundBrush}"
                    Text="{ns:Loc LblTelescopeToNINA}" />
            </Button>
            <Button
                Margin="5"
                util:ButtonHelper.DialogResult="False"
                Command="{Binding SyncNoneCommand}">
                <TextBlock
                    Margin="5"
                    Foreground="{StaticResource ButtonForegroundBrush}"
                    Text="{ns:Loc LblNoSync}" />
            </Button>
        </UniformGrid>
    </Grid>
</UserControl>