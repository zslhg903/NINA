<UserControl
    x:Class="NINA.View.FlatWizardFilterSettingsWrapperView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:NINA.Core.Enum;assembly=NINA.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ninactrl="clr-namespace:NINACustomControlLibrary;assembly=NINACustomControlLibrary"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core"
    xmlns:util="clr-namespace:NINA.Core.Utility;assembly=NINA.Core"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel DataContext="{Binding}" Orientation="Vertical">

        <StackPanel.Resources>
            <DataTemplate x:Key="DynamicExposure">
                <!--  Start Dynamic Exposure Mode  -->
                <StackPanel Orientation="Vertical">
                    <Border
                        Margin="0,0,0,5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblFlatMinExposureTime}"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Text="{Binding Settings.MinFlatExposureTime, Mode=OneWay}" />
                                <TextBlock Text="s" />
                            </StackPanel>
                            <ninactrl:PrecisionStepperControl
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,2.5,0,0"
                                MinValue="0"
                                Precision="4"
                                StepSize="1"
                                Value="{Binding Settings.MinFlatExposureTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>
                    <Border
                        Margin="0,0,0,5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblFlatMaxExposureTime}"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Text="{Binding Settings.MaxFlatExposureTime, Mode=OneWay}" />
                                <TextBlock Text="s" />
                            </StackPanel>
                            <ninactrl:PrecisionStepperControl
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,2.5,0,0"
                                MinValue="0"
                                Precision="4"
                                StepSize="1"
                                Value="{Binding Settings.MaxFlatExposureTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>
                    <Border
                        Margin="0,0,0,5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblFlatStepSize}"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Text="{Binding Settings.StepSize, Mode=OneWay}" />
                                <TextBlock Text="s" />
                            </StackPanel>
                            <ninactrl:PrecisionStepperControl
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,2.5,0,0"
                                MinValue="0"
                                Precision="4"
                                StepSize="1"
                                Value="{Binding Settings.StepSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>
                    <Border
                        Margin="0,0,0,5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Visibility="{Binding ElementName=SettingsHost, Path=DataContext.FlatDeviceInfo.Connected, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityCollapsedConverter}, UpdateSourceTrigger=PropertyChanged}">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblFlatPanelBrightness}"
                                TextWrapping="WrapWithOverflow" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Text="{Binding Settings.MaxAbsoluteFlatDeviceBrightness, Mode=OneWay}" />
                            <ninactrl:IntStepperControl
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,2.5,0,0"
                                MaxValue="{Binding ElementName=SettingsHost, FallbackValue=30, Path=DataContext.FlatDeviceInfo.MaxBrightness}"
                                MinValue="{Binding ElementName=SettingsHost, FallbackValue=30, Path=DataContext.FlatDeviceInfo.MinBrightness}"
                                StepSize="1"
                                Value="{Binding Settings.MaxAbsoluteFlatDeviceBrightness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>
                </StackPanel>
                <!--  End Dynamic Exposure Mode  -->
            </DataTemplate>
            <DataTemplate x:Key="DynamicBrightness">
                <!--  Start Dynamic Brightness Mode  -->
                <StackPanel Orientation="Vertical">
                    <Border
                        Margin="0,0,0,5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblFlatPanelMinBrightness}"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Text="{Binding Settings.MinAbsoluteFlatDeviceBrightness, Mode=OneWay}" />
                            </StackPanel>
                            <ninactrl:IntStepperControl
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,2.5,0,0"
                                MinValue="0"
                                StepSize="1"
                                Value="{Binding Settings.MinAbsoluteFlatDeviceBrightness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>
                    <Border
                        Margin="0,0,0,5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblFlatPanelMaxBrightness}"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Text="{Binding Settings.MaxAbsoluteFlatDeviceBrightness, Mode=OneWay}" />
                            </StackPanel>
                            <ninactrl:IntStepperControl
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,2.5,0,0"
                                MinValue="0"
                                StepSize="1"
                                Value="{Binding Settings.MaxAbsoluteFlatDeviceBrightness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>
                    <Border
                        Margin="0,0,0,5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblFlatStepSize}"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Text="{Binding Settings.FlatDeviceAbsoluteStepSize, Mode=OneWay}" />
                            </StackPanel>
                            <ninactrl:IntStepperControl
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,2.5,0,0"
                                MinValue="0"
                                StepSize="1"
                                Value="{Binding Settings.FlatDeviceAbsoluteStepSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>

                    <Border
                        Margin="0,0,0,5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblExposureTime}"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Text="{Binding Settings.MaxFlatExposureTime, Mode=OneWay}" />
                                <TextBlock Text="s" />
                            </StackPanel>
                            <ninactrl:PrecisionStepperControl
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,2.5,0,0"
                                MinValue="0"
                                Precision="4"
                                StepSize="1"
                                Value="{Binding Settings.MaxFlatExposureTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>
                </StackPanel>
                <!--  End Dynamic Brightness Mode  -->
            </DataTemplate>
            <DataTemplate x:Key="SkyFlat">
                <!--  Start SkyFlat Mode  -->
                <StackPanel Orientation="Vertical">
                    <Border
                        Margin="0,0,0,5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblFlatMinExposureTime}"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Text="{Binding Settings.MinFlatExposureTime, Mode=OneWay}" />
                                <TextBlock Text="s" />
                            </StackPanel>
                            <ninactrl:PrecisionStepperControl
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,2.5,0,0"
                                MinValue="0"
                                Precision="4"
                                StepSize="1"
                                Value="{Binding Settings.MinFlatExposureTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>
                    <Border
                        Margin="0,0,0,5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblFlatMaxExposureTime}"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Text="{Binding Settings.MaxFlatExposureTime, Mode=OneWay}" />
                                <TextBlock Text="s" />
                            </StackPanel>
                            <ninactrl:PrecisionStepperControl
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,2.5,0,0"
                                MinValue="0"
                                Precision="4"
                                StepSize="1"
                                Value="{Binding Settings.MaxFlatExposureTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>
                    <Border
                        Margin="0,0,0,5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblFlatStepSize}"
                                TextWrapping="WrapWithOverflow" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Text="{Binding Settings.StepSize, Mode=OneWay}" />
                                <TextBlock Text="s" />
                            </StackPanel>
                            <ninactrl:PrecisionStepperControl
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,2.5,0,0"
                                MinValue="0"
                                Precision="4"
                                StepSize="1"
                                Value="{Binding Settings.StepSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>
                </StackPanel>
                <!--  End SkyFlat Mode  -->
            </DataTemplate>
            <DataTemplate x:Key="Default">
                <Grid />
            </DataTemplate>
        </StackPanel.Resources>

        <ContentControl Content="{Binding}" DataContext="{Binding}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=SettingsHost, Path=DataContext.FlatWizardMode}" Value="0">
                            <Setter Property="ContentTemplate" Value="{StaticResource DynamicExposure}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=SettingsHost, Path=DataContext.FlatWizardMode}" Value="1">
                            <Setter Property="ContentTemplate" Value="{StaticResource DynamicBrightness}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=SettingsHost, Path=DataContext.FlatWizardMode}" Value="2">
                            <Setter Property="ContentTemplate" Value="{StaticResource SkyFlat}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <Border
            Margin="0,0,0,5"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="0,0,0,1">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Text="{ns:Loc LblFlatHistogramMeanTarget}"
                    TextWrapping="WrapWithOverflow" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{Binding HistogramMeanTargetADU, Mode=OneWay, StringFormat={}{0:N0}}" />
                <ninactrl:IntStepperControl
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    Margin="0,2.5,0,0"
                    MaxValue="100"
                    MinValue="0"
                    StepSize="10"
                    Value="{Binding Settings.HistogramMeanTarget, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource PercentageConverter}}" />
            </Grid>
        </Border>
        <Border
            Margin="0,0,0,5"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="0,0,0,1">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Text="{ns:Loc LblFlatHistogramTolerance}"
                    TextWrapping="WrapWithOverflow" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{Binding HistogramToleranceADU, Mode=OneWay}" />
                <ninactrl:IntStepperControl
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    Margin="0,2.5,0,0"
                    HorizontalAlignment="Stretch"
                    MaxValue="100"
                    MinValue="0"
                    StepSize="10"
                    Value="{Binding Settings.HistogramTolerance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource PercentageConverter}}" />
            </Grid>
        </Border>
    </StackPanel>
</UserControl>